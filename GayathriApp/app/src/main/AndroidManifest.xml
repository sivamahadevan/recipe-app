<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mahadevan.siva.gayathriapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.FoodGroupListActivity"
            android:label="@string/app_name"/>
        <activity android:name=".activities.IngredientListActivity"
            android:label="Ingredients"/>
        <activity android:name=".activities.RecipeListActivity"
            android:label="Recipes"/>
        <activity
            android:name=".activities.RecipeDetailActivity"
            android:label="@string/title_activity_recipe_detail"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".activities.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>